<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kz.growit.smartservice3.fragments.DisplayListFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.rey.material.widget.Spinner
            android:id="@+id/spinner"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            style="@style/Material.Widget.Spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:rd_style="@style/Material.Drawable.Ripple.Wave" />


        <LinearLayout
            android:id="@+id/layout_header_of_item"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:background="#ffc0c6"
            android:orientation="horizontal"
            android:padding="20dp" >

            <LinearLayout
                android:id="@+id/friends"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/icon_friends"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="0dp"
                    android:text="5454"
                    android:textColor="@color/main_color_500"
                    android:textSize="22dp" />

                <TextView
                    android:id="@+id/number_of_friends"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="2dp"
                    android:text="152"
                    android:textColor="@color/main_color_grey_500"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="friends"
                    android:textColor="@color/main_color_grey_500"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/icon_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="0dp"
                    android:text="C"
                    android:textColor="@color/main_color_500"
                    android:textSize="22dp" />

                <TextView
                    android:id="@+id/minutes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="2dp"
                    android:text="22"
                    android:textColor="@color/main_color_grey_500"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/someId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="min ago"
                    android:textColor="@color/main_color_grey_500"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/userProfilesRV"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"/>
            <!--android:layout_marginTop="?attr/actionBarSize" />-->
    </LinearLayout>
</FrameLayout>
